@{
    ViewData["Title"] = "Admin Page";
}
@model SliderModel

<div class="text-center">
    <h1 class="display-1">Slider Ekle</h1>

</div>
<form asp-action="SaveSlider" method="post" enctype='multipart/form-data'>
    <div class="row">
        <div class="col-6 p-2">
            <label>Slider Başlık</label>
            <input asp-for="title" class="form-control" />
        </div>
        <div class="col-6 p-2">
            <label>Slider İçerik</label>
            <input asp-for="content" class="form-control" />
        </div>
        <div class="col-6 p-2">
            <label>Slider Link</label>
            <input asp-for="url" class="form-control" />
        </div>
        <div class="col-6 p-2">
            <label>Slider Resim</label>
            <input asp-for="file" class="form-control" type="file" />
        </div>
    </div>
    <button class="btn btn-primary mt-3">Kaydet</button>
</form>
